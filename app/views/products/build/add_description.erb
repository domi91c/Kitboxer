<div class="wizard mt-5">
  <%= form_for @product, url: wizard_path, method: :put, validate: true do |form| %>
    <div class="row">
      <div class="col-md-9 push-lg-3">
        <div class="card">
          <div class="card-body clearfix">
            <h1>Description</h1>
            <hr>
            <%= render 'layouts/errors', resource: @product %>

            <div class="row">
              <div class="col-md-8">
                <div class="form-group">
                  <%= form.label :title, 'Title', class: 'control-label' %>
                  <%= form.text_field :title, validate: true, class: 'form-control' %>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <%= form.label :category, 'Category', class: 'control-label' %>
                  <%= form.text_field :category, validate: true, class: 'form-control' %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <%= form.label :tagline, 'Subtitle', class: 'control-label' %>
                  <%= form.text_field :tagline, validate: true, class: 'form-control' %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="row">
                  <div class="col-md-6">
                    <%= form.label :price, 'Price', class: 'control-label' %>
                    <div class="form-group">
                      <div class="input-group">
                        <span class="input-group-addon">$</span>
                        <%= form.text_field :price, validate: true, class: 'form-control' %>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= form.label :quantity, 'Quantity', class: 'control-label' %>
                      <%= form.number_field :quantity,validate: true, class: 'form-control' %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <br>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <%= form.label :body, 'Description', class: 'control-label' %>
                  <%= form.trix_editor :body, class: 'form-control' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-3 pull-lg-9">
        <%= render 'wizard_steps' %>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-9 push-lg-3">
        <div class="card">
          <div class="card-body clearfix">
            <%= link_to "Previous", previous_wizard_path, class: 'btn btn-outline-default' %>
            <%= form.submit 'Next', class: 'btn btn-primary pull-right' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
