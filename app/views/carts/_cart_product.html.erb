<li class="media">
  <%= image_tag cover_image(product), style: 'height:100px', class: 'mr-3' %>
  <div class="media-body">
    <h4 class="mt-0"><%= link_to product.title, product_path(product) %></h4>
    <h4 class="display-8 mt-1 text-success">
      <%= link_to "#{product.store.name}", store_path(product.store), class: 'text-success' %>
      <small class="text-muted">Toronto, ON Canada</small>
    </h4>

    <%= form_tag add_to_cart_path(product), class: 'd-inline', method: :put do %>
      <button type="button" class="quantity-button js-cart-quantity-decrease">
        <i class="fa fa-minus"></i>
      </button>
      <%= text_field_tag :cart_quantity,
                         nil,
                         class: 'form-control quantity-input js-quantity-input',
                         value: quantity,
                         data: { product_quantity: product.quantity } %>
      <button type="button" class="quantity-button js-cart-quantity-increase">
        <i class="fa fa-plus"></i>
      </button>
      &nbsp;
      <%= link_to "Remove from cart", remove_from_cart_path(product), class: 'remove-link' %>
      |
      <%= link_to "Save for later", save_for_later_cart_path(product.id), class: 'remove-link', method: :put %>
    <% end %>

    <span class="ml-2  float-right display-8"> <%= quantity %>
      x <%= number_to_currency(product.price) %></span>
  </div>
</li>
<br>
