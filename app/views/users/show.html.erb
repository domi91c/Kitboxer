<% content_for :header do %>
  <div class="page-header">
    <br>
    <br>
    <div class="container-fluid">
      <div class="user-info text-center">
        <%= image_tag 'default_avatar.png', width: 100, class: 'rounded-circle' %>
        <br>
        <h1 class="mt-3">Dominic Nunes</h1>
        <div class="card-social-media-buttons d-inline-block mt-3">
          <span><i class="card-social-media-button fa fa-facebook"></i></span>
          <span><i class="card-social-media-button fa fa-twitter"></i></span>
          <span><i class="card-social-media-button fa fa-google"></i></span>
        </div>
      </div>
      <ul class="nav nav-tabs page-header-tabs justify-content-center" id="myTab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" data-toggle="tab" href="#overview" role="tab" aria-controls="home">Orders</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#reviews" role="tab" aria-controls="profile">Reviews</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#shipping" role="tab" aria-controls="messages">Watching</a>
        </li>
      </ul>
    </div>
  </div>
<% end %>

<div class="tab-content">
  <div class="tab-pane active" id="overview" role="tabpanel">
    <%= render 'orders' %>
  </div>
  <div class="tab-pane " id="reviews" role="tabpanel">
    <%= render 'reviews' %>
  </div>

  <div class="tab-pane " id="shipping" role="tabpanel">
    <%= render 'watching' %>
  </div>
</div>

<%= render 'shared/edit_user_modal', user: @user %>
