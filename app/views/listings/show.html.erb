<section class="box">
  <div class="card-block">
    <div class="row">
      <div class="col-md-6">
        <% if @listing.images.first.image %>
            <div id="carouselExampleIndicators" class="carousel " data-ride="carousel">
              <div class="carousel-inner" role="listbox">
                <% @listing.images.each do |image| %>
                    <div class="carousel-item item-image <%= 'active' if image == @listing.images.first %>">
                      <img class="d-block img-fluid " src="<%= image.image.url %>">
                    </div>
                <% end %>

              </div>
              <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
            <br>
            <div class="img-carousel-indicators">
              <% @listing.images.each_with_index do |image, index| %>
                  <div data-target="#carouselExampleIndicators" data-slide-to="<%= index %>" class="img-carousel-indicator <%= 'active' if image == @listing.images.first %>">
                    <%= image_tag image.image.url,
                                  class: "img-container",
                                  style: 'height: 70px; width: 90px' %>
                  </div>
              <% end %>
            </div>
        <% end %>
      </div>
