<% if user_signed_in? %>
  <li class="nav-item dropdown show">
    <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-expanded="true">
      <%= current_user.email %>
    </a>
    <div class="dropdown-menu dropdown-menu-right " aria-labelledby="navbarDropdownMenuLink">
      <%= link_to "Account", user_path(current_user.id), class: 'dropdown-item' %>
      <%= link_to 'Log Out', destroy_user_session_path, method: :delete, class: 'dropdown-item' %>

    </div>
  </li>
<% else %>
  <li class='nav-item d-none d-lg-block ml-2'>
    <%= link_to 'Sign In', new_user_session_path, class: ' btn btn-outline-default  ' %>
  </li>
  <li class='nav-item d-none d-lg-block ml-2'>
    <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary ' %>
  </li>
  <div class=" d-lg-none " style="">
    <li class='nav-item ' style="width:49%;display: inline-block; float: left">
      <%= link_to 'Sign In', new_user_session_path, class: ' btn btn-outline-default  btn-block' %>
    </li>
    <li class='nav-item ' style="width: 49%; display: inline-block; float: right">
      <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary btn-block ' %>
    </li>
  </div>
<% end %>
