<% content_for :header do %>
  <div class="page-header">
    <br>
    <br>
    <div class="container-fluid">
      <div class="user-info text-center">
        <br>
        <h1 class="mt-3">My Products</h1>
      </div>
      <ul class="nav nav-tabs page-header-tabs justify-content-center" id="myTab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" data-toggle="tab" href="#orders" role="tab" aria-controls="home">Orders</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#reviews" role="tab" aria-controls="profile">Reviews</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#shipping" role="tab" aria-controls="messages">Watching</a>
        </li>
      </ul>
    </div>
  </div>
<% end %>

<div class="product-index mt-5">
  <section class="">
    <br>
    <div class="card-deck">
      <% @products.each do |product| %>
        <%= render 'products/product', product: product %>
      <% end %>
    </div>
    <%= link_to 'New Product', products_path, method: :post %>
  </section>

</div>
