<div class="wizard container">

  <div class="row">
    <div class="col-md-3">
      <ul class="list-group">
        <li class="list-group-item active">Description</li>
        <li class="list-group-item">Images</li>
        <li class="list-group-item">Shipping</li>
        <li class="list-group-item">Another Thin</li>
      </ul>
    </div>
    <div class="col-md-9">
      <div class="box">
        <div class="card-block clearfix">
          <h1>Guide</h1>

          <%= form_for @product, url: wizard_path, method: :put, validate: true do |form| %>
              <%= render 'layouts/errors', resource: @product %>
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <%= form.label :body, 'Description', class: 'control-label' %>
                    <%= form.trix_editor :body %>
                  </div>
                </div>
              </div>
              <%= link_to "Previous", previous_wizard_path, class: 'btn btn-secondary' %>
              <%= form.submit 'Submit', class: 'btn btn-primary pull-right' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
