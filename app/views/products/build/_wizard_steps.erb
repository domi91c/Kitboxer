<ul class="list-group">
  <% if @product.new_record? %>
    <%= link_to "1. Description", wizard_path(:add_description),
                class: "list-group-item list-group-item-action #{current_class?(wizard_path(:add_description))}" %>
    <%= link_to "2. Images", wizard_path(:add_images),
                class: "list-group-item list-group-item-action #{current_class?(wizard_path(:add_images))}" %>
    <%= link_to "3. Preview", wizard_path(:preview),
                class: "list-group-item list-group-item-action #{current_class?(wizard_path(:preview))}" %>
  <% else %>
    <%= content_tag :div, "1. Description",
                    class: "list-group-item list-group-item-action #{current_class?(wizard_path(:add_description))}" %>
    <%= content_tag :div, "2. Images",
                    class: "list-group-item list-group-item-action #{current_class?(wizard_path(:add_images))}" %>
    <%= content_tag :div, "3. Preview",
                    class: "list-group-item list-group-item-action #{current_class?(wizard_path(:preview))}" %>
  <% end %>
</ul>