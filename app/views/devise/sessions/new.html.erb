<div class="card  mx-auto col-xs-6  col-lg-4 text-center">
  <div class="card-body">
    <!--<h4 class="display-5"><#%= t('.sign_in', :default => "#{current_tenant ? current_tenant.name : "Loanerr"} Login") %></h4>-->
    <% if resource.class.name == 'User' %>
      <h1 class="display-5">Login</h1>
    <% elsif resource.class.name == 'Client' %>
      <h1 class="display-5">Borrower Login</h1>
    <% end %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: "form" }, validate: true) do |f| %>
      <%= devise_error_messages! %>
      <%= render 'layouts/errors', resource: resource %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>
      <%= f.submit t('.sign_in', :default => "Sign In"), class: "btn btn-outline-default" %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
  <div class="card-social-media-buttons d-inline-block">
    <span><i class="card-social-media-button fa fa-facebook"></i></span>
    <span><i class="card-social-media-button fa fa-twitter"></i></span>
    <span><i class="card-social-media-button fa fa-google"></i></span>
  </div>

  <hr>
</div>


