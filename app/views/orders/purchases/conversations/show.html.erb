<h1><%= @conversation.subject %></h1>
<% @conversation.receipts_for(current_user).each do |receipt| %>
  <div>
    <div><%= receipt.message.sender.full_name %> commented:</div>
    <p><%= receipt.message.body %></p>
  </div>
<% end %>
<%= form_tag purchase_conversation_messages_path(@purchase, @conversation), method: :post do %>
  <div>
    <%= text_area_tag :body %>
  </div>
  <%= submit_tag %>
<% end %>


