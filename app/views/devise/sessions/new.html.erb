<div class="card  mx-auto col-xs-6  col-lg-4 text-center">
  <div class="card-body">
    <!--<h4 class="display-5"><#%= t('.sign_in', :default => "#{current_tenant ? current_tenant.name : "Loanerr"} Login") %></h4>-->
    <% if resource.class.name == 'User' %>
        <h1 class="display-5">Login</h1>
    <% elsif resource.class.name == 'Client' %>
        <h1 class="display-5">Borrower Login</h1>
    <% end %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {role: "form"}) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>
        <%= f.submit t('.sign_in', :default => "Sign In"), class: "btn btn-outline-default" %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
