<nav class="navbar navbar-expand-md" style="margin-bottom: 20px;">
  <div class="container" style="">
    <%= link_to image_tag("logos/kitboxer_logo3.png", width: 90), products_path, class: 'navbar-brand' %>
    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target=".js-collapse" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse js-collapse">
      <span class="nav-divider d-none d-md-block"></span>
      <ul class="navbar-nav">
        <li class="nav-item ml-2 mb-3 mr-4">
          <% if user_signed_in? %>
            <%= link_to conversations_path do %>
              <i class="fa fa-envelope nav-icon" style="">
                <span class="badge"><%= current_user.mailbox.inbox.unread(current_user).count if current_user.mailbox.inbox.unread(current_user).count > 0 %></span>
              </i>
            <% end %>
          <% end %>
        </li>
        <li class="nav-item ml-2 mb-2 mr-2 " style="">
          <% if user_signed_in? %>
            <%= link_to cart_path do %>
              <i class="fa fa-shopping-cart nav-icon">
                <span class="badge"><%= current_user.cart_count if current_user.cart_count > 0 %></span>
              </i>
            <% end %>
          <% end %>
        </li>
        <li class="nav-item ml-4 mb-3 mr-2" style="">
          <% if user_signed_in? %>
            <%= link_to my_store_path(current_user) do %>
              <i class="material-icons md-24 store nav-icon">
              </i>
            <% end %>
          <% end %>
        </li>
      </ul>
      <span class="nav-divider d-none d-md-block"></span>
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= form_tag(products_path, method: :get, class: 'form-inline') do %>
            <div class="input-group NavSearch">
              <i class="material-icons md-24 search NavSearch--icon" style="color: #51646B"></i>
              <input type="text" class="NavSearch--field form-control" placeholder="Search...">
            </div>
          <% end %>
        </li>
      </ul>

      <ul class="navbar-nav ml-auto">
        <%= render 'layouts/nav_links_for_auth' %>
      </ul>
    </div>
  </div>
