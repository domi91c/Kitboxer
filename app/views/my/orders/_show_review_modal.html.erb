<div class="modal js-show-review-modal">
  <div class="modal-center">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Review for: <%= truncate(purchase.product.title) %></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <br>
          <% purchase.review.ratings.each do |rating| %>
            <%= rating.context %>
            <%= render 'products/show_rating', score: rating.score %>
          <% end %>
          <%= purchase.review.summary %>
        </div>
        <div class="modal-footer">
          <%= link_to "Edit", edit_purchase_review_path(purchase), class: 'btn btn-primary', remote: true %>
          <button type="button" class="btn btn-light" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>