<%= wizard_progress_bar %>
<div class="wizard container">
  <div class="box">
    <div class="card-block clearfix">
      <h1>Images</h1>
      <%= form_for @listing, url: wizard_path, method: :put do |form| %>
          <%= form.hidden_field :id %>
          <div id='root'>
            <% placeholder = image_path('placeholder_img.jpg') %>
            <%= content_tag :app,
                            id: "image_upload",
                            data: {
                                listing_id: @listing.id,
                            }.to_json do %>
            <% end %>
          </div>
          <%= link_to "Previous", previous_wizard_path, class: 'btn btn-secondary ' %>
          <%= form.submit 'Next', class: 'btn btn-primary pull-right' %>
      <% end %>
    </div>
  </div>
</div>
