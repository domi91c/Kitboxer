<% content_for :header do %>
  <div class="page-header">
    <br>
    <br>
    <div class="container-fluid">
      <div class="user-info text-center">
        <%= image_tag 'default_avatar.png', width: 100, class: 'rounded-circle' %>
        <br>
        <h1 class="mt-3"><%= current_user.full_name %></h1>
        <div class="card-social-media-buttons d-inline-block mt-3">
          <span><i class="card-social-media-button fa fa-facebook"></i></span>
          <span><i class="card-social-media-button fa fa-twitter"></i></span>
          <span><i class="card-social-media-button fa fa-google"></i></span>
        </div>
      </div>
      <ul class="nav nav-tabs page-header-tabs justify-content-center" role="tablist">
        <li class="nav-item">
          <%= link_to "Orders", my_orders_path,
                      class: "nav-link #{current_class?(my_orders_path)}" %>
        </li>
        <li class="nav-item">
          <%= link_to "Reviews", my_reviews_path,
                      class: "nav-link #{current_class?(my_reviews_path)}" %>
        </li>
        <li class="nav-item">
          <%= link_to "Watching", my_favorites_path,
                      class: "nav-link #{current_class?(my_favorites_path)}" %>
        </li>
      </ul>
    </div>
  </div>
<% end %>
<%= yield %>
<%= parent_layout("application") %>
