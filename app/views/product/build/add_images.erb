<div class="wizard container mt-5">

  <div class="row">
    <div class="col-md-3">
      <ul class="list-group">
        <li class="list-group-item ">Description</li>
        <li class="list-group-item active">Images</li>
        <li class="list-group-item">Shipping</li>
        <li class="list-group-item">Another Thin</li>
      </ul>
    </div>
    <div class="col-md-9">
      <div class="box">
        <div class="card-block clearfix">
          <h1>Images</h1>

          <%= form_for @product, url: wizard_path, method: :put do |form| %>
              <%= render 'layouts/errors', resource: @product %>
              <%= form.hidden_field :id %>
              <div id='root'>
                <% placeholder = image_path('placeholder_img.jpg') %>
                <%= content_tag :app,
                                class: 'js-image-uploader',
                                data: {
                                    images: @product.images,
                                    productId: @product.id,
                                }.to_json do %>
                <% end %>
              </div>
              <%= link_to "Previous", previous_wizard_path, class: 'btn btn-secondary ' %>
              <%= form.submit 'Next', class: 'btn btn-primary pull-right' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
