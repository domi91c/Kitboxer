<div class="row">
  <div class="col-md-9">
    <div class="card">
      <div class="card-body ">
        <%= form_tag('/charges', authenticity_token: form_authenticity_token, id: "payment-form") do %>
          <div class="form-row">
            <%= text_field_tag :email, nil, class: 'form-control my-2' %>
          </div>
          <div class="form-row">
            <%= text_field_tag :email, nil, class: 'form-control my-2' %>
          </div>
          <div class="form-row">
            <%= text_field_tag :email, nil, class: 'form-control my-2' %>
          </div>
          <div class="form-row">
            <div id="card-element" class="form-control my-2">
              <!-- a Stripe Element will be inserted here. -->
            </div>
            <!-- Used to display form errors -->
            <div id="card-errors"></div>
          </div>
          <%= hidden_field_tag :amount, cart_total %>
          <%= hidden_field_tag :product_ids, cart_products %>
          <div class="form-row">
            <%= submit_tag "Submit Payment", class: 'btn btn-outline-default mt-4' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
