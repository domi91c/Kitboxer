<div class="col-md-8 mx-auto">
  <div class="text-center"><%= page_entries_info @favorite_products %></div>
  <div class="card">
    <div class="card-body">
      <table class="table  ">
        <tbody>
        <% @favorite_products.each do |product| %>
          <tr>
            <td><%= image_tag product.cover_thumb.url, style: 'height:100px' %></td>
            <td><%= link_to product.title, product %></td>
            <td><%= number_to_currency product.price %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% if @favorite_products.count > 20 %>
  <div class="text-center"><%= page_entries_info @favorite_products %></div>
  <div class="pagination center">
    <%= will_paginate @favorite_products %></div>
  <br>
<% end %>
</div>


<style>
  table {
    vertical-align: middle;
  }
</style>
