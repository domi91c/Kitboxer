<% carousel_id = rand(1000000) %>
<div class="product-carousel text-center">
  <div class="carousel carousel-<%= carousel_id %>" data-ride="carousel">
    <div class="carousel-inner" role="listbox">
      <% images.each do |image| %>
        <a href="<%= image.image.url %>"
           class="carousel-item item-image <%= 'active' if image == images.first %>" data-target="#carouselModal<%= image.id %>" data-toggle="modal" data-fancybox="carousel">
          <img class="d-block img-fluid " src="<%= image.image.url %>">
        </a>
      <% end %>
    </div>
    <a class="carousel-control-prev" href=".carousel-<%= carousel_id %>" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href=".carousel-<%= carousel_id %>" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <br>
  <% if images.count > 1 %>
    <div class="img-carousel-indicators">
      <% images.each_with_index do |image, index| %>
        <a data-target=".carousel-<%= carousel_id %>" data-slide-to="<%= index %>" class="img-carousel-indicator mb-3 img-fluid <%= 'active' if image == images.first %>">
          <%= image_tag image.image.url,
                        class: "img-container",
                        style: 'height: 50px; width: 60px' %>
        </a>
      <% end %>
    </div>
  <% end %>

</div>
