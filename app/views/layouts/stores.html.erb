<% content_for :header do %>
  <div class="page-header store-header">
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <div class="user-info">
            <%= image_tag 'default_avatar.png', width: 100, class: '' %>
            <br>
            <h1 class="mt-3"><%= @store.name %></h1>
          </div>
        </div>
        <div class="col-md-8 align-text-bottom">
          <div class="store-buttons">
            <button class="btn btn-dark align-text-bottom">Contact</button>
            <button class="btn btn-primary">Ask Question</button>
            <button class="btn btn-success">Report</button>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
<%= yield %>
<%= parent_layout("application") %>
