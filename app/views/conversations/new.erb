<h1>New Conversation</h1>

<%= form_tag conversations_path, method: :post do %>
  <p><%= select_tag :user_ids, options_from_collection_for_select(@recipients, :id, :full_name), multiple: true %></p>

  <p><%= text_field_tag :subject, nil, placeholder: "Subject" %></p>
  <p><%= text_area_tag :body, nil, placeholder: "Your message goes here" %></p>

  <%= submit_tag %>
<% end %>