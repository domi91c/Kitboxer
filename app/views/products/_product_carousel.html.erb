<div class="product-carousel text-center">
  <div id="carouselExampleIndicators" class="carousel " data-ride="carousel">
    <div class="carousel-inner" role="listbox">
      <% images.each do |image| %>
          <div class="carousel-item item-image <%= 'active' if image == images.first %>" data-target="#carouselModal<%= image.id %>" data-toggle="modal">
            <img class="d-block img-fluid " src="<%= image.image.url %>">
          </div>
          <%= render 'carousel_modal', image: image %>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <br>
  <div class="img-carousel-indicators">
    <% images.each_with_index do |image, index| %>
        <div data-target="#carouselExampleIndicators" data-slide-to="<%= index %>" class="img-carousel-indicator img-responsive <%= 'active' if image == images.first %>">
          <%= image_tag image.image.url,
                        class: "img-container",
                        style: 'height: 50px; width: 60px' %>
        </div>
    <% end %>
  </div>
</div>
