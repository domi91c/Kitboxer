<section class="">
  <div class="card-deck">
    <% @listings.each do |listing| %>
        <div class=" col-md-4 col-sm-6 ">
          <div class="card mb-3 mt-3" style="">
            <div class="img-responsive"><img src=" <%= listing.images.first.image.url %>" class="card-img-top img-container"></div>
            <div class="card-block">
              <h4 class="card-title"><%= link_to listing.title, listing_path(listing) %></h4>
              <p class="card-text">Some quick example text to build on the card title and make up the bulk of the
                card's
                content.</p>
            </div>
          </div>
        </div>
    <% end %>
  </div>
  <%= link_to "New Product", new_listing_path %>
</section>

