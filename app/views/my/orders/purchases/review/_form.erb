<%= form_with model: [@purchase, @review], url: purchase_review_path(@purchase) do |f| %>
  <%= render 'layouts/errors', resource: review %>
  <div class="modal-header">
    <%= render 'rating', form: f, score: 3 %>
  </div>
  <div class="modal-body">
    <div class="form-group">
      <%= f.label :summary %>
      <%= f.text_field :summary, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, rows: 6, class: 'form-control' %>
    </div>
  </div>
  <div class="modal-footer clearfix">
    <%= f.submit 'Submit', class: 'btn btn-success float-right' %>
    <%= link_to "Cancel", :back, class: 'btn btn-light ml-2 float-right' %>
  </div>
<% end %>
